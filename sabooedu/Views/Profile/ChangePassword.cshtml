@model sabooedu.Models.Registration
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/Profile.cshtml";
}
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="section-headline text-center">
            <h3>Change Password</h3>

        </div>
    </div>
</div>
<div class="col-md-6 col-md-offset-3">
    <div class="contact-head">
        <div class="row">
            @using (Html.BeginForm("ChangePassword", "Profile"))
            {

                <div class="form-group">
                    <label>Enter New Password</label>
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "New Password" } })
                </div>
                        <div class="form-group">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <input type="submit" value="Change Password" class="btn btn-warning" />
                                <div id="msgSubmit" class="h3 text-center hidden"></div>
                                <div class="clearfix"></div>
                            </div>
                        </div>


            }
        </div>

    </div>
</div>
        <div class="col-md-12 col-sm-6 col-xs-12 contact-page">
            <div class="contact-form" id="contactForm">
                
            </div>
        </div>
