@model IEnumerable<sabooedu.Areas.Auth.Models.FullCourse>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Auth/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create","",new{ @class="btn btn-space btn-primary"})
</p>
<table class="table table-striped table-hover table-fw-widget" id="table3">
 <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cover)
        </th>
        <th></th>
    </tr>
	 </thead>
	 <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
           @if (item.Cover == "False")
           {
            <img src="https://via.placeholder.com/100" width="100" />
           }
           else
           {
            <img src="~/Uploadimage/@item.Cover" width="100" />
           }
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Cid },new {@class= " badge badge-primary" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Cid },new {@class= " badge badge-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Cid },new {@class= " badge badge-danger" })
        </td>
    </tr>
}
</tbody>
</table>
