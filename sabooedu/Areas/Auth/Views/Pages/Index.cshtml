@model IEnumerable<sabooedu.Areas.Auth.Models.Pages>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Auth/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create","",new{ @class="btn btn-space btn-primary"})
</p>
<table class="table table-striped table-hover table-fw-widget" id="table3">
 <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.PageName)
        </th>
        
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        
        <th></th>
    </tr>
	 </thead>
	 <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.PageName)
        </td>
        
        <td>
        @if (item.Image == "False")
        {
            <img src="https://via.placeholder.com/100" width="100" />
        }
        else
        {
            <img src="~/Uploadimage/@item.Image" width="100" />
        }
        </td>
        
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Pid },new {@class= " badge badge-primary" }) |
            @Html.ActionLink("Details", "Details", new { id=item.Pid },new {@class= " badge badge-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Pid },new {@class= " badge badge-danger" })
        </td>
    </tr>
}
</tbody>
</table>
